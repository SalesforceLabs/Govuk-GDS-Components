<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <description>A GDS start button that navigates to a community page when pressed</description>
    <isExposed>true</isExposed>
    <masterLabel>Gov UK Start Button</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default,lightning__AppPage,lightning__HomePage,lightning__FlowScreen">
            <property name="label" type="String" label="Label" description="The HTML to display"/>
            <property name="link" type="String" label="Destination API Name" description="The API name of the page to forward to"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>