<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <description>Use the inset text component to differentiate a block of text from the content that surrounds it</description>
    <isExposed>true</isExposed>
    <masterLabel>Gov UK Inset Text</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default,lightning__FlowScreen">
            <property name="insetText" type="String" label="Summary" description="Inset Text goes here"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>