<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <description>Flow only component that shows a summary screen and allows the user to go back to a previous screen to make changes.</description>
    <isExposed>true</isExposed>
    <masterLabel>Gov UK Summary</masterLabel>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="title" type="String"></property>
            <property name="sectionName" type="String"></property>
            <property name="instructionsHTML" type="String"></property>
            <property name="destination" type="String"></property>
            <property name="confirmationLabels" type="String[]"></property>
            <property name="confirmationValues" type="String[]"></property>
            <property name="confirmationDestinations" type="String[]"></property>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>